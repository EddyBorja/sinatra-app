<% if @note %>  
  <form action="/<%= @note.id %>" method="post" id="edit">  
    <input type="hidden" name="_method" value="put">  
    <textarea name="content"><%=h @note.content %></textarea>  
    <input type="submit">  
  </form>  
  <p><a class="deleteButton" href="/<%= @note.id %>/delete">Delete</a></p>  
<% else %>  
  <p>Note not found.</p>  
<% end %>